<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="App Control Sevilla"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="Captura Codigo producto"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Captura descripcion"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Capturar ubicacion"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etExistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="CapturarExistencias"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnAlta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="altaProducto"
            android:text="inserta nuevo producto" />

        <Button
            android:id="@+id/btnConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="consultaProducto"
            android:text="consultar por codigo producto" />

        <Button
            android:id="@+id/btnElimina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="eliminarProducto"
            android:text="eliminar producto por codigo" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="modificarProductos"
            android:text="editar producto" />

        <Button
            android:id="@+id/btnAbrirListaProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver lista de productos" />

        <Button
            android:id="@+id/btnAudioVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abri audio-video" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>